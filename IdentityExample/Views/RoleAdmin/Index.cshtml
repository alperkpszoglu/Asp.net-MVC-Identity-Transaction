@using Microsoft.AspNet.Identity.EntityFramework
@model IEnumerable<IdentityRole>
@{
    ViewBag.Title = "Index";
}

<div class="card card-body">
    <div class="card-header">Roller</div>
    <table class="table table-striped">
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th></th>
        </tr>
        @if (Model.Count() != 0)
        {

            foreach (var role in Model)
            {
                <tr>
                    <td>@role.Id</td>
                    <td>@role.Name</td>
                    <td>
                        @using (Html.BeginForm("Delete", "RoleAdmin", new { id = role.Id }))
                        {
                            <button class="btn btn-danger btn-sm" type="submit">Sil</button>
                            @Html.ActionLink("Güncelle", "Edit", new { id = role.Id }, new { @class = "btn btn-primary btn-sm" });
                        }
                    </td>
            </tr>
        }
    }
    else
    {
        <tr>
            <td colspan="3">Hiçbir Rol Mevcut Değil</td>
        </tr>
    }
    </table>
</div>

